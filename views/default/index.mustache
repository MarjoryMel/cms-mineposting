<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Página inicial!</title>
    
    <!-- Estilos CSS personalizados -->
    <style>
        .custom-navbar {
            background-color: #60af29;
        }
        
        /* Estilos para centralizar conteúdo */
        .center-content {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Alinhar o conteúdo mais para cima */
            padding-top: 50px; /* Espaçamento superior */
            min-height: 70vh; /* Altura mínima para centralizar */
        }
    </style>
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light custom-navbar">
    <div class="container">
        <a class="navbar-brand text-white" href="#">MINEPOSTING</a>
        {{#isAdmin}}
        <a href="/admin" class="btn btn-light">Admin</a>
        {{/isAdmin}}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
            <div class="d-flex">
                {{#isLoggedIn}}
                <a href="/logout" class="btn btn-danger">Logout</a>
                {{/isLoggedIn}}
                {{^isLoggedIn}}
                <a href="/login" class="btn btn-light">Login</a>
                {{/isLoggedIn}}
            </div>
        </div>
    </div>
</nav>

<!-- Centralizando os cards -->
<div class="center-content">
    <div class="container">
        <div class="row text-center">
            {{#pages}}
            <div class="col mx-2 mb-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{content}}</p>
                        <a href="/posts/{{title}}" class="card-link">Ver mais</a>
                        {{#isAdmin}}
                        <a href="/admin/posts/edit/{{id}}" class="card-link">Editar Página</a>
                        <a href="/admin/posts/delete/{{id}}" class="card-link">Deletar Página</a>
                        {{/isAdmin}}
                    </div>
                </div>
            </div>
            {{/pages}}
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
